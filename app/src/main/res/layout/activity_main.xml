<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 첫째줄 (위치 변경 기능) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/location"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <!-- 둘째줄 (검색기능) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    app:iconifiedByDefault="false"
                    app:queryHint="search" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <!-- 셋째줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                    android:id="@+id/book"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_design_oval"
                    android:padding="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="Book"
                        android:textSize="15dp"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                    android:id="@+id/wait"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_design_oval"
                    android:padding="15dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/wait"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="Wait"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                   <ImageView
                    android:id="@+id/hotdeals"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_design_oval"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/hotdeals"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="Hot Deals"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                   <ImageView
                    android:id="@+id/guide"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_design_oval"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/guide"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="Guide"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- 다섯째줄 (인기 레스토랑 및 바) -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Top Restaurant/Bar"
                    android:textSize="24sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/buddhasbelly"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/buddhasbelly"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/buddhasbelly"
                            android:text="Buddha's Belly"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/the_margaux_grill"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/themargauxgrill" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/the_margaux_grill"
                            android:text="The Margaux Grill"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/daol_charcoal_grill"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/daol_charcoal_grill"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/daol_charcoal_grill"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Daol Charcoal Grill"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:fontFamily="casual"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/mobo_bar"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/mobo_bar"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mobo_bar"
                            android:text="Mobo Bar"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 여섯째줄 (미슐렝) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Micheline Restaurants 2024"
                    android:textSize="24sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/samwongarden"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/samwongarden"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/my_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/samwongarden"
                            android:text="Samwon Garden"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/tounge_and_groove_joint"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/tounge_and_groove_joint"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tounge_and_groove_joint"
                            android:text="Tounge and Groove Joint"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/yuyuan"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/yuyuan"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/yuyuan"
                            android:text="Yuyuan"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/sool052"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/sool052"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sool052"
                            android:text="Sool 052"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/anam"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/anam"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/anam"
                            android:text="ANAM"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/kwonsooksoo"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/kwonsooksoo"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/kwonsooksoo"
                            android:text="Kwonsooksoo"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/goodbab"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/goodbab"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/goodbab"
                            android:text="Goodbab"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/jinmi_pyeongyang_naengmyeon"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/jinmi_pyeongyang_naengmyeon"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/jinmi_pyeongyang_naengmyeon"
                            android:text="Jinmi Pyeongyang Naengmyeon"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/momoyama"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/momoyama"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/momoyama"
                            android:text="Momoyama"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/doughroom"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:src="@drawable/doughroom"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/doughroom"
                            android:text="Doughroom"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="casual"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 일곱째줄 (지역구별 식당) -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Browse by Location"
                    android:textSize="24sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/jamsil" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="203dp"
                            android:src="@drawable/gangnam" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:src="@drawable/gwanghwamun"
                            android:layout_width="200dp"
                            android:layout_height="200dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:src="@drawable/hannamdong"
                            android:layout_width="200dp"
                            android:layout_height="200dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/hongdae" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/insadong" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/itaewon" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/myeongdong" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/seongsu" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/yeouido" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 여덟째줄 (음식 타입) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Cuisine"
                    android:textSize="24sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:id="@+id/horizontal_scroll_view">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:background="@drawable/button_design"
                        android:text="Korean"
                        android:id="@+id/korean"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Chinese"
                        android:id="@+id/chinese"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Italian"
                        android:id="@+id/italian"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Japanese"
                        android:id="@+id/japanese"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Fushion"
                        android:id="@+id/fushion"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Asian"
                        android:id="@+id/asian"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="View more"
                        android:id="@+id/viewmore"/>

                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:scaleType="centerCrop">

                <LinearLayout
                    android:id="@+id/contentLayout"
                    android:layout_width="400dp"
                    android:layout_height="300dp"
                    android:orientation="horizontal"
                    android:padding="16dp" />
            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

    <!-- 하단 아이콘 (홈, 검색, 프로필) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="145dp"
            android:src="@drawable/profile"/>

    </LinearLayout>
